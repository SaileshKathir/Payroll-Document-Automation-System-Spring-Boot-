<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="Payslip"
              pageWidth="595" pageHeight="842" columnWidth="555"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20"
              uuid="b1234567-89ab-cdef-0123-456789abcdef">

    <parameter name="companyName" class="java.lang.String"/>
    <parameter name="companyAddress" class="java.lang.String"/>
    <parameter name="employeeName" class="java.lang.String"/>
    <parameter name="employeeId" class="java.lang.Integer"/>
    <parameter name="designation" class="java.lang.String"/>
    <parameter name="payPeriod" class="java.lang.String"/>
    <parameter name="basicPay" class="java.lang.Double"/>
    <parameter name="hra" class="java.lang.Double"/>
    <parameter name="allowances" class="java.lang.Double"/>
    <parameter name="pf" class="java.lang.Double"/>
    <parameter name="tax" class="java.lang.Double"/>
    <parameter name="otherDeductions" class="java.lang.Double"/>
    <parameter name="netPay" class="java.lang.Double"/>

    <title>
        <band height="80">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="16" isBold="true"/>
                </textElement>
                <text><![CDATA[Payslip]]></text>
            </staticText>

            <textField>
                <reportElement x="0" y="30" width="555" height="20"/>
                <textElement textAlignment="Center">
                    <font size="12" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{companyName}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="50" width="555" height="20"/>
                <textElement textAlignment="Center">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{companyAddress}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <pageHeader>
        <band height="90">
            <staticText>
                <reportElement x="0" y="0" width="200" height="20"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Employee Details]]></text>
            </staticText>

            <textField>
                <reportElement x="0" y="25" width="250" height="18"/>
                <textFieldExpression><![CDATA["Name: " + $P{employeeName}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="45" width="250" height="18"/>
                <textFieldExpression><![CDATA["Employee ID: " + $P{employeeId}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="300" y="25" width="250" height="18"/>
                <textFieldExpression><![CDATA["Designation: " + $P{designation}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="300" y="45" width="250" height="18"/>
                <textFieldExpression><![CDATA["Pay Period: " + $P{payPeriod}]]></textFieldExpression>
            </textField>
        </band>
    </pageHeader>

    <detail>
        <band height="200">
            <staticText>
                <reportElement x="0" y="0" width="250" height="20"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Earnings]]></text>
            </staticText>

            <textField>
                <reportElement x="0" y="25" width="250" height="18"/>
                <textFieldExpression><![CDATA["Basic Pay: " + $P{basicPay}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="45" width="250" height="18"/>
                <textFieldExpression><![CDATA["HRA: " + $P{hra}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="65" width="250" height="18"/>
                <textFieldExpression><![CDATA["Allowances: " + $P{allowances}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="300" y="0" width="250" height="20"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Deductions]]></text>
            </staticText>

            <textField>
                <reportElement x="300" y="25" width="250" height="18"/>
                <textFieldExpression><![CDATA["PF: " + $P{pf}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="300" y="45" width="250" height="18"/>
                <textFieldExpression><![CDATA["Tax: " + $P{tax}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="300" y="65" width="250" height="18"/>
                <textFieldExpression><![CDATA["Other: " + $P{otherDeductions}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="0" y="100" width="100" height="20"/>
                <textElement><font isBold="true" size="12"/></textElement>
                <text><![CDATA[Net Pay:]]></text>
            </staticText>

            <textField>
                <reportElement x="100" y="100" width="200" height="20"/>
                <textElement><font isBold="true" size="12"/></textElement>
                <textFieldExpression><![CDATA[$P{netPay}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <pageFooter>
        <band height="40">
            <staticText>
                <reportElement x="0" y="10" width="555" height="20"/>
                <textElement textAlignment="Center"/>
                <text><![CDATA[This is a system generated payslip and does not require signature.]]></text>
            </staticText>
        </band>
    </pageFooter>
</jasperReport>